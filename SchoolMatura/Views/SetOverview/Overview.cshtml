@{
     Layout = "_Layout";
}

@section Styles 
{
    <link rel="stylesheet" href="~/css/SetOverview.css" asp-append-version="true" />
}

<div id="Wrapper">
    <div id="Content">
        <div id="SubNavBar">
            <h2>
                Kod Sesji: Wybierz sesję dla której ma zostać podany kod
            </h2>
            <button>Edytuj Zestaw <i class="fa-solid fa-pen-to-square"></i></button>
        </div>
        <div class="container-fluid" id="SetOverviewContainer">
            <div class="row">
                <div class="col-12">
                    <div class="input-group standard-input-group title-input-group">
                        <input readonly type="text" class="form-control" placeholder="Dodaj tytuł swojego zestawu...">
                        <span class="input-group-text"><i class="fa-solid fa-marker edit-set-icon"></i></span>
                    </div>
                    <div class="input-group standard-input-group description-input-group">
                        <textarea readonly rows="3" class="form-control" placeholder="Dodaj opis swojego zestawu..."></textarea>
                        <span class="input-group-text"><i class="fa-solid fa-marker edit-set-icon"></i></span>
                    </div>
                    <div id="TestSessionCreator">
                        <h2 id="TestSessionCreatorHeader">Udostępnij zestaw do rozwiązania</h2>
                        <div class="date-picker-line">
                            <h4><i class="fa-regular fa-clock"></i> Data rozpoczęcia sesji:</h4>
                            <div class="date-picker-new-session date-picker-start" id="DatePickerBegin"></div>
                        </div>
                        <input type="hidden" id="result" value="" />
                        <div class="date-picker-line">
                            <h4><i class="fa-regular fa-clock"></i> Data wygaśnięcia sesji:</h4>
                            <div class="date-picker-new-session date-picker-end" id="DatePickerEnd"></div>
                        </div>
                        <input type="hidden" id="result2" value="" />
                        <div class="input-group standard-input-group">
                            <span class="input-group-text">Nazwa Sesji:</span>
                            <input id="SessionName" type="text" class="form-control" placeholder="Wpisz nazwę sesji...">
                        </div>
                        <h6 id="TestSessionCreatorExplanation">
                            Po upływie powyższej daty ten zestaw przestanie być dostępny do rozwiązania za pomocą podania unikalnego kodu, który w rezultacie stanie się nieważny.
                            W celu zmienienia daty kliknij wartość powyżej.
                        </h6>
                        <button class="icon-button">
                            <i class="fa-solid fa-calendar-check"></i> Dodaj Nową Sesje
                        </button>
                    </div>
                </div>
            </div>
            <div id="ExercisesListHeader">
                <div class="input-group complex-input-shared">
                    <input type="text" class="form-control" placeholder="Wyszukaj po hashtagach..." />
                    <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
                </div>
                <h2 id="ExerciseCounter">
                    W tym zestawie znajduje się <span style="color: #002eef;">0</span> zadań
                </h2>
            </div>
            <ul id="ExercisesList" style="list-style: none;">
                <!-- <li class="exercise-shortcut">
                    <i class="fa-solid fa-circle-question"></i>
                    <h4 class="question-type">Question Type</h4>
                    <div class="content">Content sdhbshbhfbhsbhshffbkjsbjkfdjbksbfbsf iisfnhjsbfhksbkfdksjbksdbfk</div>
                </li> -->
            </ul>
            <div class="empty-list" style="display: none;">
                <img src="~/images/empty-svg.svg" alt="-" />
                <h4>Nic nie znaleziono...</h4>
            </div>
        </div>
    </div>
    <div id="RightPanel">
        <div id="SessionsShortcuts">
            <i class="fa-solid fa-clock-rotate-left sessions-shortcuts-big-icon"></i>
            <h5 class="sessions-shortcuts-text">Ostatnie Sesje</h5>
            <ul id="RecentSessionsList">
                <!-- <li class="session-shortcut">
                    <i class="fa-solid fa-calendar-days sessions-shortcuts-big-icon"></i>
                    <h5 class="sessions-shortcuts-text sessions-shortcuts-text-small">15:48</br>11-05-2022</h5>
                </li>
                <li class="session-shortcut">
                    <i class="fa-solid fa-calendar-days sessions-shortcuts-big-icon"></i>
                    <h5 class="sessions-shortcuts-text sessions-shortcuts-text-small">15:48</br>11-05-2022</h5>
                </li> -->
            </ul>
        </div>
        <div id="SessionsAndResults">
            <div class="input-group blue-panel-input-group">
                <input id="SessionSearchBar" type="text" class="form-control" placeholder="Wpisz tytuł sesji..." />
                <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
            </div>
            <ul id="AllSessionsList">
                <!-- <li class="session-shortcut">
                    <i class="fa-solid fa-users-rays"></i>
                    <div class="session-shortcut-details">
                        <h6>Moja nowa sesja</h6>
                        <h6>15:48 11-05-2022</h6>
                    </div>
                </li>
                <button class="icon-button">
                    <i class="fa-solid fa-lock"></i> Pokaż Kod Sesji
                </button>
                <li class="session-shortcut">
                    <i class="fa-solid fa-users-rays"></i>
                    <div class="session-shortcut-details">
                        <h6>Moja nowa sesja</h6>
                        <h6>15:48 11-05-2022</h6>
                    </div>
                </li>
                <button class="icon-button">
                    <i class="fa-solid fa-lock"></i> Pokaż Kod Sesji
                </button> -->
                <li id="AllSessionsListEmpty">
                    <i class="fa-solid fa-face-sad-tear"></i>
                    <span>Nic nie znaleziono...</span>
                </li>
            </ul>
        </div>
        <div id="Results" style="display: none;">
            <div class="input-group blue-panel-input-group">
                <input id="ResultsSearchBar" type="text" class="form-control" placeholder="Imię lub nazwisko ucznia..." />
                <span class="input-group-text"><i class="fa-solid fa-magnifying-glass"></i></span>
            </div>
            <ul id="ResultsList">
                <li class="result-shortcut">
                    <i class="fa-solid fa-user-graduate"></i>
                    <div class="result-shortcut-details">
                        <h6>Mateusz Janikowski</h6>
                        <h6>15:48 11-05-2022</h6>
                    </div>
                </li>
            </ul>
            <button class="icon-button" id="BackToSessionsButton">
                <i class="fa-solid fa-arrow-left-long"></i> Powróć Do Listy Sesji
            </button>
        </div>
    </div>
</div>
<div class="modal fade site-modal" tabindex="-1" id="ErrorModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Uwaga! Poczekaj chwilę</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                    Zamknij <i class="fa-solid fa-circle-xmark"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts 
{
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script type="text/javascript" id="MathJax-script" src="~/math-jax/math-jax.js"></script>
    <script src="~/js/SetOverview.js"></script>
}